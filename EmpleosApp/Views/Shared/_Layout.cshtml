@using EmpleosApp.Helpers;
@using System.Security.Claims;
@using System.Security.Principal;

@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService



<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EmpleosApp</title>
	<link href="~/css/site.css" rel="stylesheet">
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

	<link media="all" rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
	<!-- Custom styles for this template -->
	<link href="~/lib/bootstrap/dist/css/jumbotron.css" rel="stylesheet">
	<link href="~/lib/bootstrap/dist/css/sticky-footer-navbar.css" rel="stylesheet">
</head>
<body>
	<header>
	  <nav class="navbar navbar-expand-md navbar-dark bg-white text-dark fixed-top" and>
		<a class="navbar-brand text-dark" href="/">
			<img src="~/images/logolayout.png" width="150px" height="30px" />
		</a>
		<button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
		  <span class="badge-dark navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse text-dark" id="navbarsExampleDefault">
			
			
					<ul class="navbar-nav mr-auto text-dark">
						@if (User.Identity.IsAuthenticated)
						{
							@if (User.IsInRole("Administrador"))
							{
							
								<li class="nav-item">
									<a class="nav-link active text-dark" href="/Solicitudes/index">Solicitudes</a>
								</li>
								<li class="nav-item">
									<a class="nav-link active text-dark" href="/vacantes/index">Vacantes</a>
								</li>
								<li class="nav-item">
									<a class="nav-link active text-dark" href="/categorias/index">Categorias</a>
								</li>
								<li class="nav-item">
									<a class="nav-link active text-dark" href="/usuarios/index">Usuarios</a>
								</li>
							}
						}
						<li class="nav-item">
							<a class="nav-link active text-dark" href="/home/acerca">Acerca</a>
						</li>
					</ul>
			
			@if (User.Identity.IsAuthenticated)
			{
				<a id="bienvenido" class="nav-item mr-2 text-center fst-italic ">Bienvenido: @SessionHelper.GetName(User)</a>
				<a class="btn btn-dark text-white" href="/auth/Logout">Cerrar Sesión</a>
			}else{
			<a class="btn btn-danger mr-2 text-white" href="/auth/login">Ingresar</a>;
			<a class="btn btn-dark text-white" href="/usuarios/create">Registrarse</a>
			}
		</div>
	  </nav>
	</header>
	
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	<footer class=" bg-dark border-top footer text-muted">
		<div class="container">
			&copy; 2022 - EMPLEOS_APP.WEB
		</div>
		
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
