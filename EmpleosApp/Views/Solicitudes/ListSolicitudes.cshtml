<!doctype html>
<html lang="en">
  <head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="favicon.ico">

	<title>EmpleosApp | Listado de Solicitudes de Empleo</title>
	<!-- Bootstrap core CSS -->
	<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<!-- Custom styles for this template -->
	<link href="bootstrap/css/jumbotron.css" rel="stylesheet">
	<link href="bootstrap/css/sticky-footer-navbar.css" rel="stylesheet">
	<link href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" rel="stylesheet">
  </head>

  <body>

	<main role="main">     
	  <hr>
	  <div class="container">
		@if(TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success">
				@TempData["SuccessMessage"]
			</div>
		}

		<div class="card">
		  <h4 class="card-header"><strong>Listado de Solicitudes de Empleo</strong></h4>              
		  <div class="card-body">
			<table class="table table-hover">
			  <thead class="thead-light">
				<tr>
				  <th scope="col">Categoría</th>
				  <th scope="col">Vacante</th>
				  <th scope="col">Nombre Candidato</th>
				  <th scope="col">Recibida</th>
				  <th scope="col">Operaciones</th>
				</tr>
			  </thead>
			  <tbody>
			  @foreach(var item in Model)
			   { 
				<tr>
				  <td>Categorias.Nombre</td>
				  <td>@item.Vacante.Nombre</td>
				  <td>@item.Usuario.Nombre</td>
				  <td>@item.Fecha.ToString("d")</td>
				  <td>
					<a href="/solicitudes/Delete?id=@item.Id" onclick="return confirm('¿Estas seguro?')" class="btn btn-success btn-sm" role="button" title="Eliminar el registro."><i class="fas fa-trash" aria-hidden="true"></i></a>
					<a href="/Mail/Index?email=@item.Usuario.Email"  class="btn btn-success btn-sm" role="button" title="Enviar correo electrónico al usuario."><i class="fas fa-envelope" aria-hidden="true"></i></a>
					<a href="/solicitudes/Download?docName=@item.Archivo" class="btn btn-success btn-sm" role="button" title="Descargar Curriculm Vitae."><i class="fas fa-download" aria-hidden="true"></i></a>
				  </td>
				</tr>
				}
							   
			  </tbody>
			</table>
			
		  </div>
		</div>
	  </div> <!-- /container -->

	</main>

	<!-- Bootstrap core JavaScript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
	<script src="bootstrap/js/bootstrap.min.js"></script>     
  </body>
</html>